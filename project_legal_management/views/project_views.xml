<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project_project_form_page_other_info</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="other_info" string="Other Information">
                    <group>
                        <field name="lm_date"/>
                        <field name="lm_employee_ids" widget="many2many_tags"/>
                        <field name="lm_expedient_number"/>
                        <field name="lm_issue_ids" widget="many2many_tags"/>
                        <field name="lm_resolution_id"/>
                    </group>
                    <group string="Provision">
                        <field name="lm_amount"/>
                        <field name="lm_probability_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_project_legal_management" name="Legal Management" parent="project.menu_main_pm"
              sequence="200" groups="project.group_project_manager"/>
</odoo>