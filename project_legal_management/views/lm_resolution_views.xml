<odoo>
    <record id="lm_resolution_form_view" model="ir.ui.view">
        <field name="name">lm.resolution.form.view</field>
        <field name="model">lm.resolution</field>
        <field name="arch" type="xml">
            <form string="Resolution Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lm_resolution_tree" model="ir.ui.view">
        <field name="name">project.legal.management.lm.resolution.tree</field>
        <field name="model">lm.resolution</field>
        <field name="arch" type="xml">
            <tree string="Issues">
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="project_resolution_list_action" model="ir.actions.act_window">
        <field name="name">Resolution</field>
        <field name="res_model">lm.resolution</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="lm_resolution_menu" name="Resolution" parent="menu_project_legal_management"
              action="project_resolution_list_action"
              sequence="90"/>
</odoo>

