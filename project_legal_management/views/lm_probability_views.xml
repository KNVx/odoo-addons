<odoo>
    <record id="lm_probability_form_view" model="ir.ui.view">
        <field name="name">lm.probability.form.view</field>
        <field name="model">lm.probability</field>
        <field name="arch" type="xml">
            <form string="Probability Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lm_probability_tree" model="ir.ui.view">
        <field name="name">project.legal.management.lm.probability.tree</field>
        <field name="model">lm.probability</field>
        <field name="arch" type="xml">
            <tree string="Issues">
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="project_probability_list_action" model="ir.actions.act_window">
        <field name="name">Probability</field>
        <field name="res_model">lm.probability</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="lm_probability_menu" name="Probability" parent="menu_project_legal_management"
              action="project_probability_list_action"
              sequence="85"/>

</odoo>