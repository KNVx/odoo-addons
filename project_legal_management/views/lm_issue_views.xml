<odoo>

    <record id="lm_issue_form_view" model="ir.ui.view">
        <field name="name">lm.issue.form.view</field>
        <field name="model">lm.issue</field>
        <field name="arch" type="xml">
            <form string="Issues Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>




    <record id="lm_issue_tree" model="ir.ui.view">
        <field name="name">project.legal.management.lm.issue.tree</field>
        <field name="model">lm.issue</field>
        <field name="arch" type="xml">
            <tree string="Issues">
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="project_issue_list_action" model="ir.actions.act_window">
        <field name="name">Issue</field>
        <field name="res_model">lm.issue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="lm_issue_menu" name="Issues" parent="menu_project_legal_management"
              action="project_issue_list_action"
              sequence="203"/>
</odoo>